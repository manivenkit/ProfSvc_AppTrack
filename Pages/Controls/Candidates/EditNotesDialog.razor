<SfDialog Header="Edit Notes" Height="635px" IsModal="true" MinHeight="400px" Target="#divTarget" Width="480px" Visible="false" @ref="Dialog">
	<ChildContent>
		<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="right" Y="center" />
		<DialogAnimationSettings Duration="500" Effect="DialogEffect.SlideRight" />
		<EditForm Model="ModelObject" OnValidSubmit="SaveExperienceDialog">
			<DataAnnotationsValidator />
			<div class="divContainerTable">
				<LabelTextBox @bind-Value="@(ModelObject.Notes)" @bind-Value:event="ValueChanged" FieldName="Notes" ID="textNotes" MaxLength="1000" MinLength="1" Multiline="true" Placeholder="Candidate Notes"
							  ValidationMessage="@(() => ModelObject.Notes)" />
			</div>
			<DialogFooter CancelMethod="CancelExperienceDialog"></DialogFooter>
		</EditForm>
	</ChildContent>
</SfDialog>