<SfDialog @bind-Visible="@VisibleRatingCandidate" Header="Edit Rating" Height="600px" IsModal="true" MinHeight="300px" Target="#divTarget" Width="600px">
	<ChildContent>
        <SfSpinner @bind-Visible="@SpinnerVisible" CssClass="spinnerHeight" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="right" Y="center"></DialogPositionData>
		<DialogAnimationSettings Duration="500" Effect="DialogEffect.SlideRight"></DialogAnimationSettings>
		<DialogEvents Closed="CancelRating"></DialogEvents>
		<EditForm Model="ModelObject" OnValidSubmit="SaveRating">
			<DataAnnotationsValidator></DataAnnotationsValidator>
			<div style="height: 100%">
				<div class="divContainerTable">
					<div style="width: 100%">
						<SfGrid AllowPaging="false" DataSource="@GridObject" EnableHeaderFocus="true" EnableHover="true" Height="145px" ID="gridRating" RowHeight="@RowHeight" SelectedRowIndex="0" TValue="CandidateRating" Width="99%">
							<GridSelectionSettings EnableToggle="false" Mode="SelectionMode.Row" PersistSelection="true" Type="SelectionType.Single"></GridSelectionSettings>
							<GridColumns>
								<GridColumn Field="@nameof(CandidateRating.Date)" HeaderText="Date" Width="20%"></GridColumn>
								<GridColumn Field="@nameof(CandidateRating.User)" HeaderText="User" IsPrimaryKey="true" Visible="false" Width="0"></GridColumn>
								<GridColumn Field="@nameof(CandidateRating.Rating)" HeaderText="Rating" Width="20%"></GridColumn>
								<GridColumn Field="@nameof(CandidateRating.Comments)" HeaderText="Comments" Width="20%"></GridColumn>
							</GridColumns>
						</SfGrid>
					</div>
					<div class="divFlex" style="margin-top: 25px">
						<div class="divFlexLabel">
							<label class="labelStatus" for="radzenRating">Rating:</label>
						</div>
						<div class="divFlexSmall">
							<RadzenRating ID="radzenRating" Stars="5" @bind-Value="@ModelObject.Rating" />
						</div>
					</div>
					<div class="divFlex">
						<div class="divFlexLabel">
							<label class="labelStatus" for="textComments">Comments:</label>
						</div>
						<div class="divFlexBig" style="height: 100px">
							<SfTooltip CloseDelay="0" OnOpen="@ToolTipOpen" OpenDelay="0" OpensOn="Hover" Position="Position.TopCenter" Target="#textComments" Width="100%" WindowCollision="true">
								<SfTextBox @bind-Value="@(ModelObject.RatingComments)" FloatLabelType="FloatLabelType.Never" HtmlAttributes="@HtmlAttributes1" ID="textComments" Multiline="true" Placeholder="Comments">
								</SfTextBox>
								<TooltipTemplates>
									<Content>
										<ValidationMessage For="@(() => ModelObject.RatingComments)"></ValidationMessage>
									</Content>
								</TooltipTemplates>
							</SfTooltip>
						</div>
					</div>
				</div>
			</div>
			<div class="e-footer-content">
				<SfButton IconCss="saveButton" IconPosition="IconPosition.Left" IsPrimary="true" type="submit">Save</SfButton>
				<SfButton IconCss="closeButton" IconPosition="IconPosition.Left" OnClick="CancelRating" type="button">Cancel</SfButton>
			</div>
		</EditForm>
	</ChildContent>
</SfDialog>