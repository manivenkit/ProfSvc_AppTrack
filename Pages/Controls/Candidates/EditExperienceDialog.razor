<SfDialog Header="Edit Experience" Height="635px" IsModal="true" MinHeight="400px" @ref="Dialog" Target="#divTarget" Visible="false" Width="480px">
	<ChildContent>
		<SfSpinner CssClass="spinnerHeight" @ref="Spinner" Type="SpinnerType.Fabric" ZIndex="12000" />
		<DialogPositionData X="right" Y="center" />
		<DialogAnimationSettings Duration="500" Effect="DialogEffect.SlideRight" />
		<EditForm Model="ModelObject" OnValidSubmit="SaveExperienceDialog">
			<DataAnnotationsValidator />
			<div class="divContainerTable">
				<TextBoxControl @bind-Value="@(ModelObject.Employer)" @bind-Value:event="ValueChanged" ID="textEmployer" MaxLength="100" MinLength="1" Multiline="false" Placeholder="Employer Name"
							  ValidationMessage="@(() => ModelObject.Employer)" />
				<TextBoxControl @bind-Value="@(ModelObject.Description)" @bind-Value:event="ValueChanged" ID="textDescription" MaxLength="1000" MinLength="1" Multiline="true" Placeholder="Description"
							  ValidationMessage="@(() => ModelObject.Description)" />
				<TextBoxControl @bind-Value="@(ModelObject.Location)" @bind-Value:event="ValueChanged" ID="textLocation" MaxLength="100" MinLength="1" Multiline="false" Placeholder="Location"
							  ValidationMessage="@(() => ModelObject.Location)" />
				<TextBoxControl @bind-Value="@(ModelObject.Title)" @bind-Value:event="ValueChanged" ID="textTitle" MaxLength="100" MinLength="1" Multiline="false" Placeholder="Job Title"
							  ValidationMessage="@(() => ModelObject.Title)" />
				<TextBoxControl @bind-Value="@(ModelObject.Start)" @bind-Value:event="ValueChanged" ID="textStart" MaxLength="100" MinLength="1" Multiline="false" Placeholder="Experience Start Date"
							  ValidationMessage="@(() => ModelObject.Start)" />
				<TextBoxControl @bind-Value="@(ModelObject.End)" @bind-Value:event="ValueChanged" ID="textEnd" MaxLength="100" MinLength="1" Multiline="false" Placeholder="Experience Ending Date"
							  ValidationMessage="@(() => ModelObject.End)" />
			</div>
			<DialogFooter CancelMethod="CancelExperienceDialog"></DialogFooter>
		</EditForm>
	</ChildContent>
</SfDialog>