@typeparam TItem
@using FilterType = Syncfusion.Blazor.DropDowns.FilterType
@typeparam TValue

@if (CreateTooltip)
{
	<SfTooltip CloseDelay="0" OnOpen="ToolTipOpen" OpenDelay="0" OpensOn="Hover" Position="Position.TopCenter" Target="@("#" + ID)" Width="100%" WindowCollision="true">
		<SfMultiSelect AllowFiltering="true" DataSource="@DataSource" FilterBarPlaceholder="@FilterBarPlaceholder" FilterType="FilterType.Contains" ID="@ID" Mode="VisualMode.Box" Placeholder="@Placeholder"
					   TItem="TItem" TValue="TValue" Value="@Value" ValueChanged="ValueChanged" ValueExpression="@ValueExpression" Width="@Width">
			@*<MultiSelectEvents  TItem="TItem" TValue="TValue" />*@
			<MultiSelectFieldSettings Text="@ValueField" Value="@KeyField" />
		</SfMultiSelect>
		<TooltipTemplates>
			<Content>
				<ValidationMessage For="@ValidationMessage" />
			</Content>
		</TooltipTemplates>
	</SfTooltip>
}
else
{
	<SfMultiSelect AllowFiltering="true" DataSource="@DataSource" FilterBarPlaceholder="@FilterBarPlaceholder" FilterType="FilterType.Contains" ID="@ID" Mode="VisualMode.Box" Placeholder="@Placeholder"
				   TItem="TItem" TValue="TValue" Value="@Value" ValueChanged="ValueChanged" ValueExpression="@ValueExpression" Width="@Width">
		@*<MultiSelectEvents TItem="TItem" TValue="TValue" />*@
		<MultiSelectFieldSettings Text="@ValueField" Value="@KeyField" />
	</SfMultiSelect>
}