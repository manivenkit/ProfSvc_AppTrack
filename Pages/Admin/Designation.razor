@page "/Admin/Title"
@layout ProfSvcLayout

<Header></Header>
<div class="gridHolder">
	<div class="divGridToolBar">
		<div style="display: flex">
			<div style="flex: 1; text-align: left">
				&nbsp;
			</div>
			<div class="divRightControls">
				<SfButton Content="Refresh" CssClass="topToolButton" IconCss="refreshButton" @onclick="RefreshGrid"></SfButton>
				<SfButton Content="Add Title" CssClass="topToolButton" IconCss="newButton" @onclick="() => EditDesignationAsync(0)"></SfButton>
				<AutoCompleteButton ID="autoTitle" PlaceholderText="Select a Title" @ref="AutoCompleteControl" Ref="AutoCompleteControl" TypeInstance="@typeof(AdminDesignationDropDownAdaptor)" ValueChange="FilterGrid">
				</AutoCompleteButton>
			</div>
		</div>
	</div>
	<SfGrid AllowPaging="false" EnableHeaderFocus="true" EnableHover="true" Height="100%" @ref="Grid" SelectedRowIndex="0" TValue="AdminList" Width="99.75%">
		<GridSelectionSettings EnableToggle="false" Mode="SelectionMode.Row" PersistSelection="true" Type="SelectionType.Single"></GridSelectionSettings>
		<SfDataManager Adaptor="Adaptors.CustomAdaptor" AdaptorInstance="@typeof(AdminDesignationAdaptor)" Key="ID"></SfDataManager>
		<GridEvents DataBound="DataHandler" OnActionComplete="ActionComplete" RowSelected="RowSelected" TValue="AdminList"></GridEvents>@*OnActionBegin="ActionBegin"*@
		<GridColumns>
			<GridColumn Field="Text" HeaderText="Designation" Width="50%">
				<Template Context="aCon">
					@{
						if (aCon is AdminList _con)
						{
							<span class="point" @onclick="() => EditDesignationAsync(_con.ID)">@_con.Text</span>
						}
					}
				</Template>
			</GridColumn>
			<GridColumn Field="@nameof(AdminList.ID)" HeaderText="Last Updated" IsPrimaryKey="true" Visible="false" Width="0"></GridColumn>
			<GridColumn Field="@nameof(AdminList.Enabled)" HeaderText="Status" Width="10%">
				<Template Context="aCon">
					@{
						if (aCon is AdminList _con)
						{
							<span>@(_con.IsEnabled ? "Active" : "Inactive")</span>
						}
					}
				</Template>
			</GridColumn>
			<GridColumn Field="@nameof(AdminList.UpdatedDate)" Format="d" HeaderText="Last Updated" Width="15%"></GridColumn>
			<GridColumn Field="@nameof(AdminList.CreatedDate)" HeaderText="Created" Width="15%"></GridColumn>
			<GridColumn Width="10%">
				<Template Context="aCon">
					@{
						if (aCon is AdminList _con)
						{
							<SfButton Content="" IconCss="editIcon" @onclick="() => EditDesignationAsync(_con.ID)"></SfButton>
							<SfButton Content="" IconCss="@(_con.IsEnabled ? "statusOnIcon" : "statusOffIcon")" @onclick="() => ToggleStatusAsync(_con.ID)"></SfButton>
						}
					}
				</Template>
			</GridColumn>
		</GridColumns>
	</SfGrid>
	<SfDialog Visible="false" Header="@(Title + " Title")" Height="300px" IsModal="true" MinHeight="300px" Target="#divTarget" Width="400px" @ref="Dialog">
		<ChildContent>
			<SfSpinner CssClass="spinnerHeight" Type="SpinnerType.Fabric" ZIndex="12000" @ref="Spinner" />
			<DialogPositionData X="right" Y="center"></DialogPositionData>
			<DialogAnimationSettings Effect="DialogEffect.SlideRight"></DialogAnimationSettings>
			<EditForm Model="_designationRecord" OnValidSubmit="SaveDesignationAsync">
				<DataAnnotationsValidator></DataAnnotationsValidator>
				<div class="divContainerTable">
					<div class="divFlex">
						@*<LabelBox ID="textTitle" MaxLength="50" MinLength="1" Multiline="false" Placeholder="Title" Readonly="false" ValidationMessage="@(() => _designationRecord.Text)"></LabelBox>*@
						<div class="divFlexLabel">
							<label class="labelStatus" for="textTitle">Title:</label>
						</div>
						<div class="divFlexSmall">
							<SfTooltip CloseDelay="0" OnOpen="ToolTipOpen" OpenDelay="0" OpensOn="Hover" Position="Position.TopCenter" Target="#textTitle" Width="100%" WindowCollision="true">
								@*<LabelTextBox @bind-Value="@(_designationRecord.Text)" ID="textTitle" MaxLength="50" MinLength="1" Multiline="false" Placeholder="Title" Readonly="false"
                                    ValidationMessage="@(() => _designationRecord.Text)" @bind-Value:event="ValueChanged"></LabelTextBox>*@
								<SfTextBox @bind-Value="@(_designationRecord.Text)" FloatLabelType="FloatLabelType.Never" HtmlAttributes="@_htmlAttributes" ID="textTitle" Multiline="false" Placeholder="Title">
								</SfTextBox>
								<TooltipTemplates>
									<Content>
										<ValidationMessage For="@(() => _designationRecord.Text)"></ValidationMessage>
									</Content>
								</TooltipTemplates>
							</SfTooltip>
						</div>
					</div>
					<LabelSwitch @bind-BindValue="@(_designationRecord.IsEnabled)" ID="checkedEnabled" OffLabel="INACTIVE" OnLabel="ACTIVE" Placeholder="Status?"></LabelSwitch>
				</div>
				<div class="e-footer-content">
					<SfButton IconCss="saveButton" IconPosition="IconPosition.Left" IsPrimary="true" type="submit">Save</SfButton>
					<SfButton IconCss="closeButton" IconPosition="IconPosition.Left" OnClick="CancelAsync" type="button">Cancel</SfButton>
				</div>
			</EditForm>
		</ChildContent>
	</SfDialog>
	<div class="divGridFooter">
		<div>
			Items
			<b>1</b> to
			<b>@Count</b> of
			<b>@Count</b> rows
		</div>
	</div>
</div>